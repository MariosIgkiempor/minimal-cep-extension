<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ExtensionBundleId="com.myextension" ExtensionBundleName="myextension" ExtensionBundleVersion="1.0.0" Version="12.0">
	<ExtensionList>
		<Extension Id="com.myextension.extension" Version="1.0"/>
		<Extension Id="com.myextension.server" Version="1.0"/>
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
			<Host Name="ILST" Version="17.0" />
		</HostList>
		<LocaleList>
			<Locale Code="All"/>
		</LocaleList>
		<RequiredRuntimeList>
		  <RequiredRuntime Name="CSXS" Version="12.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="com.myextension.extension">
			<DispatchInfo>
				<Resources>
					<MainPath>./frontend/index.html</MainPath>
					<ScriptPath>./jsx/scripts.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
					<StartOn>
						<Event>applicationActivate</Event>
					</StartOn>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>My Extension</Menu>
					<Geometry>
						<Size>
							<Height>700</Height>
							<Width>600</Width>
						</Size>
						<MinSize>
							<Height>500</Height>
							<Width>500</Width>
						</MinSize>
						<MaxSize>
							<Height>900</Height>
							<Width>900</Width>
						</MaxSize>
					</Geometry>
          <Icons>
            <Icon Type="Normal">./images/IconLight.png</Icon>
            <Icon Type="RollOver">./images/IconLight.png</Icon>
            <Icon Type="DarkNormal">./images/IconDark.png</Icon>
            <Icon Type="DarkRollOver">./images/IconDark.png</Icon>
          </Icons>
				</UI>
			</DispatchInfo>
		</Extension>
		<Extension Id="com.myextension.server">
			<DispatchInfo>
				<Resources>
					<MainPath>./server/index.server.html</MainPath>
					<CEFCommandLine>
						<Parameter>--enable-nodejs</Parameter>
					</CEFCommandLine>
				</Resources>
				<Lifecycle>
					<AutoVisible>false</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Custom</Type>
					<Icons />
					  <Geometry>
						<Size>
							<Height>10</Height>
							<Width>10</Width>
						</Size>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>
